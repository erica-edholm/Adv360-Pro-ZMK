#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/stp.h>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/pointing.h>
#define DEFAULT 0
#define KEYPAD 1
#define FN 2
#define MOD 3
#define SYMBOLS 4
#define MACROS 5

/ {
    behaviors {
      #include "macros.dtsi"
      #include "version.dtsi"

    hm: homerow_mods {
        compatible = "zmk,behavior-hold-tap";
        label = "HOMEROW_MODS";
        #binding-cells = <2>;
        tapping-term-ms = <200>;
        quick_tap_ms = <175>;
        flavor = "tap-preferred";
        bindings = <&kp>, <&kp>;
    };
    bspace: backspace_hold_tap {
        compatible = "zmk,behavior-hold-tap";
        label = "BACKSPACE_HOLD_TAP";
        #binding-cells = <2>;
        tapping-term-ms = <200>;
        quick-tap-ms = <125>;
        bindings = <&mo>, <&kp>;
    };
    td2: tap_dance_2 {
        compatible = "zmk,behavior-tap-dance";
        label = "TAP_DANCE";
        #binding-cells = <0>;
        tapping-term-ms = <200>;
        bindings = <&kp BACKSPACE>, <&lt SYMBOLS BACKSPACE>;
    };

  };

  keymap {
    compatible = "zmk,keymap";
    default_layer {
      display-name = "Base";
      bindings = <
        &kp EQUAL &kp N1    &kp N2          &kp N3   &kp N4     &kp N5 &tog KEYPAD                                                                 &mo 3 &kp N6 &kp N7 &kp N8    &kp N9        &kp N0   &kp MINUS
        &kp TAB   &kp Q     &kp W           &kp E    &kp R      &kp T  &none                                                                       &none &kp Y  &kp U  &kp I     &kp O         &kp P    &kp LBKT
        &kp ESC   &kp A     &kp S           &kp D    &kp F      &kp G  &none            &kp LCTRL &kp RALT           &kp RCTRL &kp LALT            &none &kp H  &kp J  &kp K     &kp L         &kp SEMI &kp SQT
        &kp LSHFT &kp Z     &kp X           &kp C    &kp V      &kp B                             &mt LGUI HOME      &kp PG_UP                           &kp N  &kp M  &kp COMMA &kp DOT       &kp FSLH &kp RSHFT
        &mo FN    &kp GRAVE &kp NON_US_BSLH &kp LEFT &kp RIGHT                     &td2 &kp DEL   &lt MACROS END     &kp PG_DN &kp ENTER &kp SPACE              &kp UP &kp DOWN  &kp BACKSLASH &kp RBKT &mo FN
      >;
    };

    keypad {
      display-name = "Kp";
      bindings = <
        &kp EQUAL &kp N1    &kp N2          &kp N3   &kp N4    &kp N5 &trans                                                                  &mo 3  &kp N6 &kp KP_NUM &kp KP_EQUAL &kp KP_DIVIDE &kp KP_MULTIPLY &kp MINUS
        &kp TAB   &kp Q     &kp W           &kp E    &kp R     &kp T  &none                                                                   &none  &kp Y  &kp KP_N7  &kp KP_N8    &kp KP_N9     &kp KP_MINUS    &kp BSLH
        &kp ESC   &kp A     &kp S           &kp D    &kp F     &kp G  &none        &kp LCTRL &kp RALT           &kp RCTRL &kp LALT            &none  &kp H  &kp KP_N4  &kp KP_N5    &kp KP_N6     &kp KP_PLUS     &kp SQT
        &kp LSHFT &kp Z     &kp X           &kp C    &kp V     &kp B                         &mt LGUI HOME      &kp PG_UP                            &kp N  &kp KP_N1  &kp KP_N2    &kp KP_N3     &kp KP_ENTER    &kp RSHFT
        &mo FN    &kp GRAVE &kp NON_US_BSLH &kp LEFT &kp RIGHT                &td2 &kp DEL   &lt MACROS END     &kp PG_DN &kp ENTER &kp KP_N0               &kp UP     &kp DOWN     &kp KP_DOT    &kp RBKT        &mo FN
      >;
    };

    fn {
      display-name = "Fn";
      bindings = <
        &kp F1 &kp F2 &kp F3 &kp F4 &kp F5 &kp F6 &tog KEYPAD                                           &mo MOD &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &kp F12
        &trans &trans &trans &trans &trans &trans &none                                                 &none   &trans &trans &trans &trans  &trans  &trans
        &trans &trans &trans &trans &trans &trans &none              &trans &trans &trans &trans        &none   &trans &trans &trans &trans  &trans  &trans
        &trans &trans &trans &trans &trans &trans                           &trans &trans                       &trans &trans &trans &trans  &trans  &trans
        &trans &trans &trans &trans &trans                    &trans &trans &trans &trans &trans &trans                &trans &trans &trans  &trans  &trans
      >;
    };

    mod {
      display-name = "Mod";
      bindings = <
        &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &none                                                                     &trans                 &none        &none        &none        &none &none &none
        &none &none        &none        &none        &none        &none        &bootloader                                                                                   &bootloader            &none        &none        &none        &none        &none        &none
        &studio_unlock     &none        &none        &none        &none        &none        &none                   &none &none &bt BT_CLR &none                      &stp STP_BAT &none        &none        &none        &none &none &none
        &none &none        &none        &none        &macro_ver   &none                                      &none &none                                                        &none        &none        &none        &none &none &none
        &none &none        &none        &none        &none                                       &none &none &none &none      &bl BL_TOG &rgb_ug RGB_TOG                                     &bl BL_INC   &bl BL_DEC   &none &none &none
      >;
    };
    symbols {
      display-name = "Symbols";
      bindings = <
        &trans &trans         &trans         &trans         &trans         &trans         &trans                                             &trans &trans         &trans         &trans         &trans         &trans         &trans
        &trans &kp TAB        &macro_se_unds &macro_se_lbrc &macro_se_rbrc &macro_se_circ &trans                                             &trans &macro_se_exlm &macro_se_labk &macro_se_rabk &macro_se_eql  &macro_se_ampr &trans
        &trans &macro_se_bsls &macro_se_slsh &macro_se_lcbr &macro_se_rcbr &macro_se_astr &trans        &trans &trans &trans  &trans         &trans &macro_se_ques &macro_se_lprn &macro_se_rprn &macro_se_mins &macro_se_coln &macro_se_at
        &trans &macro_se_hash &macro_se_dlr  &macro_se_pipe &macro_se_tild &macro_se_grv                       &trans &trans                        &macro_se_plus &macro_se_perc &macro_se_dquo &macro_se_unds &macro_se_scln &trans
        &trans &kp INS        &trans         &trans         &trans                               &trans &trans &trans &trans  &trans  &trans                       &trans         &macro_se_quot &trans         &trans         &trans
      >;
    };
    macro {
      display-name = "Macros";
      bindings = <
        &trans &trans      &trans &trans &trans &trans &trans                                             &trans &trans &trans &trans &trans &trans &trans
        &trans &trans      &trans &trans &trans &trans &trans                                             &trans &trans &trans &trans &trans &trans &trans
        &trans &macro_home &trans &trans &trans &trans &trans        &trans &trans &trans  &trans         &trans &trans &trans &trans &trans &trans &trans
        &trans &trans      &trans &trans &trans &trans                      &trans &trans                        &trans &trans &trans &trans &trans &trans
        &trans &trans      &trans &trans &trans               &trans &trans &trans &trans  &trans  &trans               &trans &trans &trans &trans &trans
      >;
    };
    extra1 {
      display-name = "Red";
      status = "reserved";
    };

    extra2 {
      display-name = "Purple";
      status = "reserved";
    };

    extra3 {
      display-name = "Cyan";
      status = "reserved";
    };

    extra4 {
      display-name = "Yellow";
      status = "reserved";
    };
  };
};
